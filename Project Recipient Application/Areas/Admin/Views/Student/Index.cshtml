@model IEnumerable<Project_Recipient_Application.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}
<div>
    <h2 class="pull-left">مدیریت دانشجو ها</h2>
    <h2 class="pull-right">
        <a href="/Admin/Student/Create" class="btn btn-success">جدید</a>
    </h2>
</div>

<div class="clearfix" style="margin-bottom:50px;"></div>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.stuCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Curse)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.stuCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curse)
            </td>
            <td>
                @Html.ActionLink("حذف", "Delete", new { id = item.ID }, new { @class = "btn btn-xs btn-danger" })
            </td>
        </tr>
    }

</table>
